 //Tables
.table_vertical,.table_horizontal,.table_bordered
  border 1px solid color_ui1_border_pattern1
.table_vertical
  th,td
   border-left 1px solid color_ui1_border_pattern1 
  th:first-child,td:first-child
   border-left none  
.table_horizontal
  td
   border-top 1px solid color_ui1_border_pattern1     
.table_bordered
  th,td
   border-left 1px solid color_ui1_border_pattern1 
  th:first-child,td:first-child
   border-left none   
  td
   border-top 1px solid color_ui1_border_pattern1
.table_striped
 tbody
  tr
   background bg_ui1_patter1
  tr:nth-child(2n-1)
   background bg_ui1_patter2     
.table_hover
 tbody
  tr
   &:hover 
    background bg_ui1_hover_tr1
